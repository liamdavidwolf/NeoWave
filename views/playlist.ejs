<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>NeoWave - Tus Playlists</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/playlist.css">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="text-center mb-4">üìÄ Tus Playlists Guardadas</h1>
    <div id="playlistContainer" class="row gy-4"></div>
  </div>

  <!-- Reproductor inferior -->
  <div class="fixed-bottom bg-white shadow p-3" id="playerContainer" style="display: none;">
    <div class="d-flex align-items-center gap-3">
      <img id="playerCover" src="" class="cover-img" alt="Cover">
      <div class="flex-grow-1">
        <h5 id="playerTitle" class="mb-0">T√≠tulo</h5>
        <small id="playerArtist">Artista</small>
      </div>
      <audio id="audioPlayer" controls class="w-50"></audio>
    </div>
  </div>

  <script>
    const playlistContainer = document.getElementById('playlistContainer');
    const audioPlayer = document.getElementById('audioPlayer');
    const playerCover = document.getElementById('playerCover');
    const playerTitle = document.getElementById('playerTitle');
    const playerArtist = document.getElementById('playerArtist');
    const playerContainer = document.getElementById('playerContainer');

    function playSong(song) {
      audioPlayer.src = `/api/songs/play/${song.filename}`;
      audioPlayer.play();
      playerCover.src = `/api/songs/cover/${song.cover}`;
      playerTitle.textContent = song.title;
      playerArtist.textContent = song.artist;
      playerContainer.style.display = 'flex';
    }

    async function loadPlaylists() {
      const res = await fetch('/api/playlists');
      const playlists = await res.json();
      playlistContainer.innerHTML = '';

      if (playlists.length === 0) {
        playlistContainer.innerHTML = `<p class="text-center">No hay playlists guardadas.</p>`;
        return;
      }

      playlists.forEach(playlist => {
        const div = document.createElement('div');
        div.className = 'col-12';

        let songsHtml = '';
        playlist.songs.forEach(song => {
          songsHtml += `
            <div class="d-flex align-items-center mb-2">
              <img src="/api/songs/cover/${song.cover}" class="cover-img me-2" alt="${song.title}">
              <div class="flex-grow-1">
                <strong>${song.title}</strong><br>
                <small>${song.artist}</small>
              </div>
              <button class="btn btn-sm btn-outline-primary ms-2" onclick='playSong(${JSON.stringify(song)})'>‚ñ∂Ô∏è</button>
            </div>
          `;
        });

        div.innerHTML = `
          <div class="card playlist-card shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">üé∂ ${playlist.name}</h5>
                <div>
                  <button class="btn btn-sm btn-outline-secondary me-2" onclick="editPlaylist('${playlist._id}', '${playlist.name}')">‚úèÔ∏è Editar</button>
                  <button class="btn btn-sm btn-outline-danger" onclick="deletePlaylist('${playlist._id}')">üóëÔ∏è Eliminar</button>
                </div>
              </div>
              <hr>
              ${songsHtml}
            </div>
          </div>
        `;
        playlistContainer.appendChild(div);
      });
    }

    async function deletePlaylist(id) {
      if (confirm('¬øEst√°s seguro de que deseas eliminar esta playlist?')) {
        const res = await fetch(`/api/playlists/${id}`, { method: 'DELETE' });
        if (res.ok) {
          loadPlaylists();
        } else {
          alert('Error al eliminar la playlist.');
        }
      }
    }

    function editPlaylist(id, oldName) {
      const newName = prompt('Nuevo nombre para la playlist:', oldName);
      if (newName && newName.trim() !== '') {
        fetch(`/api/playlists/${id}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ name: newName.trim() })
        })
        .then(res => {
          if (res.ok) {
            loadPlaylists();
          } else {
            alert('Error al editar la playlist.');
          }
        });
      }
    }

    loadPlaylists();
  </script>
</body>
</html>

